{
  "name": "crucible",
  "version": "0.3.3",
  "description": "Serverless CMS backed by Firebase",
  "main": "index.js",
  "repository": "tivac/crucible",
  "scripts": {
    "build": "node build/build.js",
    "eslint": "eslint .",
    "export": "node build/build.js --compress=true",
    "lint": "npm run eslint && npm run stylelint",
    "posttest": "npm run lint && npm run export",
    "preversion": "npm test",
    "version": "changes",
    "postversion": "git push --follow-tags",
    "preview": "changes",
    "start": "node build/serve.js",
    "stylelint": "stylelint src/**/*.css",
    "test": "mocha"
  },
  "keywords": [
    "cms",
    "mithril",
    "firebase"
  ],
  "author": "Pat Cavit <npm@patcavit.com>",
  "license": "MIT",
  "devDependencies": {
    "@studio/changes": "^1.1.0",
    "awesomplete": "^1.1.0",
    "better-assert": "^1.0.2",
    "chokidar": "^1.5.1",
    "codemirror": "^5.11.0",
    "connect": "^3.4.1",
    "cssnano": "^3.7.7",
    "date-fns": "^1.5.2",
    "ecstatic": "^2.1.0",
    "eslint": "^3.7.1",
    "eslint-config-arenanet": "^3.0.1",
    "filesize": "^3.3.0",
    "firebase": "^2.4.1",
    "fs-promise": "^1.0.0",
    "fuzzysearch": "^1.0.3",
    "humanize-duration": "^3.6.0",
    "husky": "^0.12.0",
    "jsesc": "^2.2.0",
    "lodash.assign": "^4.0.0",
    "lodash.capitalize": "^4.0.1",
    "lodash.clamp": "^4.0.3",
    "lodash.clone": "^4.5.0",
    "lodash.debounce": "^4.0.0",
    "lodash.filter": "^4.2.1",
    "lodash.foreach": "^4.3.0",
    "lodash.get": "^4.0.0",
    "lodash.map": "^4.0.0",
    "lodash.mapkeys": "^4.1.0",
    "lodash.mapvalues": "^4.0.0",
    "lodash.merge": "^4.0.1",
    "lodash.set": "^4.0.0",
    "lodash.times": "^4.0.0",
    "lodash.unset": "^4.5.2",
    "minimist": "^1.2.0",
    "mithril": "^0.2.0",
    "mithril-objectify": "^3.1.0",
    "mithril-query": "0.9.3",
    "mocha": "^3.1.2",
    "modular-css": "^0.29.1",
    "modular-css-namer": "^1.0.1",
    "morgan": "^1.6.1",
    "postcss-import": "^8.0.2",
    "postcss-nested": "^1.0.0",
    "pretty-bytes": "^4.0.2",
    "purecss": "^0.6.0",
    "remarkable": "^1.7.1",
    "rollup": "^0.36.3",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-commonjs": "^5.0.5",
    "rollup-plugin-filesize": "^1.0.1",
    "rollup-plugin-json": "^2.0.1",
    "rollup-plugin-node-builtins": "1.0.8",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-strip": "^1.1.1",
    "rollup-plugin-uglify": "^1.0.1",
    "rollup-watch": "^2.4.0",
    "run-parallel": "^1.1.4",
    "shelljs": "^0.7.3",
    "sluggo": "^0.2.0",
    "stylelint": "^7.6.0",
    "stylelint-config-standard": "^15.0.0",
    "svg-spritzer": "0.0.3",
    "unique-slug": "^2.0.0",
    "url": "^0.11.0",
    "url-join": "0.0.1",
    "validate-commit-msg": "^2.8.2",
    "whatwg-fetch": "^0.11.0"
  },
  "eslintConfig": {
    "extends": "arenanet",
    "env": {
      "node": true,
      "mocha": true,
      "browser": true
    },
    "parserOptions": {
      "ecmaVersion": 5,
      "sourceType": "module"
    },
    "rules": {
      "prefer-template": "off",
      "consistent-this": "off"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "color-hex-case": "upper",
      "indentation": 4,
      "declaration-empty-line-before": null,
      "at-rule-empty-line-before": [
        "always",
        {
          "except": "first-nested",
          "ignore": "blockless-group"
        }
      ],
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "composes"
          ]
        }
      ],
      "comment-empty-line-before": null,
      "rule-nested-empty-line-before": null,
      "no-eol-whitespace": [
        true,
        {
          "ignore": "empty-lines"
        }
      ],
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ]
    }
  }
}
